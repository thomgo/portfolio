{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
  <h3 class="text-center mt-2">DÃ©couvrir mon travail</h3>
  <div class="row mb-5 justify-content-center">
    {% for project in projects %}
      <div class="col-9 col-sm-6 col-md-4 col-lg-3">
        <article class="card my-3">
          <div class="layer"></div>
          <img class="img-fluid" src="{{asset("img/project_images/" ~ project.imageFilename)}}" alt="">
          <div class="card-body d-flex justify-content-center align-items-center">
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal{{project.position}}">
              {{ project.title }}
            </button>
          </div>
        </article>
        <!-- Modal -->
        <section class="modal fade" id="modal{{project.position}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <header class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ project.title }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </header>
              <div class="modal-body">
                {{project.description}}
              </div>
              <footer class="modal-footer">
                {% if project.viewLink %}
                  <a href="{{project.viewLink}}" target="_blank" class="btn btn-secondary">Site <i class="fas fa-desktop"></i></a>
                {% endif %}
                {% if project.codeLink %}
                  <a href="{{project.codeLink}}" target="_blank" class="btn btn-secondary">GitHub <i class="fab fa-github" aria-hidden="true"></i></a>
                {% endif %}
                <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
              </footer>
            </div>
          </div>
        </section>
      </div>
    {% endfor %}
  </div>
{% endblock %}

{% block javascripts %}
  <script src="{{asset("js/cards.js")}}" type="text/javascript"></script>
{% endblock %}
